<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Usuários</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/jsgrid/dist/jsgrid.min.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/jsgrid/dist/jsgrid.min.js"></script>
</head>
<body>
  <h1>Lista de Usuários</h1>
  <div id="jsGrid"></div>

  <script>
    $(document).ready(() => {
      $('#jsGrid').jsGrid({
        width: "100%",
        height: "400px",
        autoload: true,
        paging: true,
        pageSize: 10,
        controller: {
          loadData: function() {
            return fetch('/users').then(response => response.json());
          }
        },
        fields: [
          { name: "id", type: "text", width: 50 },
          { name: "name", type: "text", width: 100 },
          { name: "email", type: "text", width: 200 }
        ]
      });
    });
  </script>
</body>
</html>