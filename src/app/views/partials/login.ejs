<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-white p-8 rounded-lg shadow-lg w-96">
        <h2 class="text-2xl font-bold text-center text-gray-700 mb-6">Login</h2>
        <div>
            <div class="mb-4">
                <div class="flex-col items-center justify-center gap-2">
                    <label for="email" class="block text-gray-600">Email</label>
                    <input type="text" id="username"  placeholder="Escreva seu Email" name="email" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                    <button id="buttonEmail" type="button" class="w-full py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition duration-300">PROCURAR</button>
                </div>
            </div>
            <div id="fieldCode" class="mb-6">
                <div class="flex-col items-center justify-center gap-2"></div>
                    <label for="number" class="block text-gray-600">Codigo</label>
                    <input type="number" id="code" name="code" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                </div>
            </div>
            <button id="entrar" type="button" class="w-full py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition duration-300">Entrar</button>
        </div>
    </div>
</body>

