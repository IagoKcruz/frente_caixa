<div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-4xl">
    <h2 class="text-2xl font-semibold text-gray-800 border-b pb-4 mb-6">Cadastro de Item de Venda</h2>
    
    <form id="formItem" class="space-y-6">
        <div class="grid grid-cols-2 gap-6">
            <div>
                <%- include('../Combos/ComboChaveValor.ejs', { 
                    id: 'categoria_id', 
                    name: 'categoria_id', 
                    titulo: 'Categoria', 
                    dados: Categoria 
                }) %>
            </div>
            <div>
                <%- include('../Combos/ComboChaveValor.ejs', { 
                    id: 'unidade_medida_id', 
                    name: 'unidade_medida_id', 
                    titulo: 'Unidade de Medida', 
                    dados: UnidadeMedida 
                }) %>
            </div>
        </div>

        <div class="grid grid-cols-3 gap-6">
            <div>
                <label for="saldo_estoque_atual" class="block text-gray-700 font-medium">Saldo Estoque Atual</label>
                <input type="number" id="saldo_estoque_atual" name="saldo_estoque_atual" class="w-full p-2 border rounded-lg focus:ring focus:ring-blue-300" required>
            </div>
            <div>
                <%- include('../Combos/ComboBoxSimNao.ejs', { 
                    id: 'registrar_comissao', 
                    name: 'registrar_comissao', 
                    titulo: 'Registrar Comissão'
                }) %>
            </div>
            <div>
                <%- include('../Combos/ComboBoxSimNao.ejs', { 
                    id: 'sn_ativo', 
                    name: 'sn_ativo', 
                    titulo: 'Ativo'
                }) %>
            </div>
        </div>

        <div class="grid grid-cols-2 gap-6">
            <div>
                <label for="descricao" class="block text-gray-700 font-medium">Descrição</label>
                <input type="text" id="descricao" name="descricao" maxlength="120" class="w-full p-2 border rounded-lg focus:ring focus:ring-blue-300">
            </div>
            <div>
                <label for="preco" class="block text-gray-700 font-medium">Preço</label>
                <input type="number" step="0.01" id="preco" name="preco" class="w-full p-2 border rounded-lg focus:ring focus:ring-blue-300" required>
            </div>
        </div>

        <div class="flex justify-end space-x-4 mt-6">
            <button type="button" class="px-5 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-600">Cancelar</button>
            <button type="submit" class="px-5 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Salvar</button>
        </div>
    </form>
</div>

<script type="module" src="/js/Operacoes/RegisterItem.js"></script>
