<div class="bg-white p-6 rounded-lg shadow-md w-full max-w-3xl">
    <h2 class="text-xl font-bold text-gray-700 mb-4">Cadastro de Item de Venda</h2>
    
    <form id="formItem" class="space-y-4">
        <div class="block text-gray-600">
            <%- include('../Combos/ComboChaveValor.ejs', { 
                id: 'categoria_id', 
                name: 'categoria_id', 
                titulo: 'Categoria', 
                dados: Categoria 
            }) %>
        </div>

        <div class="block text-gray-600">
            <%- include('../Combos/ComboChaveValor.ejs', { 
                id: 'unidade_medida_id', 
                name: 'unidade_medida_id', 
                titulo: 'Unidade de Medida', 
                dados: UnidadeMedida 
            }) %>
        </div>

        <div>
            <label for="saldo_estoque_atual" class="block text-gray-600">Saldo Estoque Atual</label>
            <input type="number" id="saldo_estoque_atual" name="saldo_estoque_atual" class="w-full p-2 border rounded focus:ring focus:ring-blue-300" required>
        </div>


        <div class="block text-gray-600">
            <%- include('../Combos/ComboChaveValor.ejs', { 
                id: 'registrar_comissao', 
                name: 'registrar_comissao', 
                titulo: 'Registrar Comissão'
            }) %>
        </div>

        <div class="block text-gray-600">
            <%- include('../Combos/ComboChaveValor.ejs', { 
                id: 'sn_ativo', 
                name: 'sn_ativo', 
                titulo: 'Ativo'
            }) %>
        </div>

        <div>
            <label for="descricao" class="block text-gray-600">Descrição</label>
            <input type="text" id="descricao" name="descricao" maxlength="120" class="w-full p-2 border rounded focus:ring focus:ring-blue-300">
        </div>

        <div>
            <label for="preco" class="block text-gray-600">Preço</label>
            <input type="number" step="0.01" id="preco" name="preco" class="w-full p-2 border rounded focus:ring focus:ring-blue-300" required>
        </div>

        <div class="flex justify-between">
            <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Salvar</button>
            <button type="button" class="px-4 py-2 bg-gray-300 rounded hover:bg-gray-400">Cancelar</button>
        </div>
    </form>
</div>

<script type="module" src="/js/Operacoes/RegisterItem.js"></script>
