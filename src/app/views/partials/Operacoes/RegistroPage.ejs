<body class="bg-gray-100 mt-10 flex items-center justify-center min-h-screen">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-4xl">
        <h2 class="text-2xl font-bold text-center text-gray-700 mb-6">Registro de Usuário</h2>
        
        <div class="grid grid-cols-2 gap-4">
            <!-- Nome -->
            <div>
                <label for="nome" class="text-gray-600">Nome</label>
                <input type="text" id="nome" name="nome" placeholder="Digite seu nome" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
            </div>

            <!-- CPF ou CNPJ -->
            <div>
                <label class="text-gray-600">Tipo de Documento</label>
                <div class="flex items-center gap-2">
                    <input type="radio" id="cpf" name="documento" value="cpf" class="focus:ring-blue-500" checked>
                    <label for="cpf" class="text-gray-600">CPF</label>
                    <input type="radio" id="cnpj" name="documento" value="cnpj" class="focus:ring-blue-500">
                    <label for="cnpj" class="text-gray-600">CNPJ</label>
                </div>
                <input type="text" id="documento" name="documento" placeholder="Digite CPF ou CNPJ" class="w-full mt-2 px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
            </div>

            <!-- RG -->
            <div>
                <label for="rg" class="text-gray-600">RG</label>
                <input type="text" id="rg" name="rg" placeholder="Digite seu RG" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
            </div>

            <!-- Data de Nascimento -->
            <div>
                <label for="dataNascimento" class="text-gray-600">Data de Nascimento</label>
                <input type="date" id="dataNascimento" name="dataNascimento" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
            </div>

            <!-- Email -->
            <div>
                <label for="email" class="text-gray-600">Email</label>
                <input type="email" id="email" name="email" placeholder="Digite seu email" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
            </div>

            <!-- Bairro -->
            <div>
                <label for="bairro" class="text-gray-600">Bairro</label>
                <input type="text" id="bairro" name="bairro" placeholder="Digite seu bairro" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
            </div>

            <!-- Rua -->
            <div>
                <label for="rua" class="text-gray-600">Rua</label>
                <input type="text" id="rua" name="rua" placeholder="Digite sua rua" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
            </div>

            <!-- Número -->
            <div>
                <label for="numero" class="text-gray-600">Número</label>
                <input type="number" id="numero" name="numero" placeholder="Digite o número" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
            </div>

            <!-- Inscrição Estadual (Aparece apenas para CNPJ) -->
            <div id="inscricaoEstadualDiv" style="display: none;">
                <label for="inscricaoEstadual" class="text-gray-600">Inscrição Estadual</label>
                <input type="text" id="inscricaoEstadual" name="inscricaoEstadual" placeholder="Digite a Inscrição Estadual" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <!-- ComboBox Município -->
            <div class="col-span-2">
                <%- include('../Combos/ComboChaveValor.ejs', { 
                    id: 'municipio', 
                    name: 'municipio', 
                    titulo: 'Município', 
                    dados: Municipios 
                }) %>
            </div>
        </div>

        <!-- Seção de ADMIN (Apenas aparece se role === 'ADMIN') -->
        <% if (role === 'ADMIN') { %>
            <div class="mt-6 border-t pt-4">
                <h3 class="text-lg font-semibold text-gray-700 mb-4">Configurações de ADMIN</h3>

                <div class="grid grid-cols-2 gap-4">
                    <!-- Aplicação de Regras -->
                    <div>
                        <label for="role" class="text-gray-600">Aplicação de Regras</label>
                        <select id="role" name="role" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="admin">ADMIN</option>
                            <option value="cliente">CLIENTE</option>
                        </select>
                    </div>

                    <!-- Aplicação de Promoções -->
                    <div>
                        <label for="promocao" class="text-gray-600">Aplicação de Promoções</label>
                        <select id="promocao" name="promocao" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="promo1">Promoção 1</option>
                            <option value="promo2">Promoção 2</option>
                        </select>
                    </div>
                </div>
            </div>
        <% } %>

        <!-- Botão de Registrar -->
        <div class="mt-6">
            <button id="registrar" type="button" class="w-full py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition duration-300">
                Registrar
            </button>
        </div>
    </div>

    <script type="module" src="/js/Operacoes/RegisterPage.js"></script>
</body>
