<% var corFundo = "bg-gray-300" %>  <!-- Defina sua cor aqui -->
<% var corBotao = "bg-blue-500" %>  <!-- Cor dos botões -->
<% var corBotaoHover = "hover:bg-blue-600" %>  <!-- Cor do hover do botão -->
<% var corTexto = "text-gray-700" %>  <!-- Cor do texto -->
<% var corBorda = "border-blue-500" %>  <!-- Cor da borda -->

<div class="flex justify-center items-center w-full h-full">
    <div class="<%- corFundo %> p-6 sm:p-8 rounded-lg shadow-lg w-full max-w-md">
      <div class="space-y-4">
        <!-- Campo Email -->
        <div class="flex flex-col">
          <label for="email" class="text-sm font-medium <%- corTexto %> mb-2">Email</label>
          <input 
            type="text" 
            id="username" 
            name="email" 
            placeholder="Escreva seu Email"
            class="px-4 py-2 <%- corBorda %> rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 w-full  "
            required
          />
          <button 
            id="buttonEmail" 
            type="button" 
            class="w-full py-2 <%- corBotao %> text-white rounded-md <%- corBotaoHover %> transition duration-300 mt-2">
            PROCURAR
          </button>
        </div>
  
        <!-- Campo Código -->
        <div id="fieldCode" class="flex flex-col">
          <label for="code" class="text-sm font-medium <%- corTexto %> mb-2">Código</label>
          <input 
            type="number" 
            id="code" 
            name="code" 
            class="px-4 py-2 <%- corBorda %> rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 w-full"
            required
          />
        </div>
  
        <!-- Botões -->
        <button 
          id="entrar" 
          type="button" 
          class="w-full py-2 <%- corBotao %> text-white rounded-md <%- corBotaoHover %> transition duration-300">
          Entrar
        </button>
        <button 
          id="recuperar_codigo" 
          type="button" 
          class="w-full py-2 text-blue-600 hover:underline">
          Recuperar Código
        </button>
      </div>
    </div>
  </div>
  
<script type="module" src="/js/operacoes/LoginPage.js"></script>
